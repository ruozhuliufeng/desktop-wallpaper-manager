<Window x:Class="DesktopWallpaperApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DesktopWallpaperApp.Controls"
        mc:Ignorable="d"
        Title="桌面壁纸管理器" Height="600" Width="800"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#FF2D2D30">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1BA1E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#FF007ACC"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#FF3C3C3C" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SelectWallpaperButton" 
                        Content="选择壁纸" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="SelectWallpaperButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="AddClockButton" 
                        Content="添加时钟" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="AddClockButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="AddPomodoroButton" 
                        Content="添加番茄时钟" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="AddPomodoroButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="HideShowButton" 
                        Content="隐藏窗口" 
                        Style="{StaticResource ModernButtonStyle}"
                        Click="HideShowButton_Click"/>
            </StackPanel>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- 组件显示区域 -->
            <Border Grid.Column="0" Background="Black" Margin="5">
                <Canvas x:Name="WidgetCanvas" Background="Transparent">
                    <Canvas.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="添加时钟" Click="AddClockMenuItem_Click"/>
                            <MenuItem Header="添加番茄时钟" Click="AddPomodoroMenuItem_Click"/>
                            <Separator/>
                            <MenuItem Header="清除所有组件" Click="ClearAllMenuItem_Click"/>
                        </ContextMenu>
                    </Canvas.ContextMenu>
                </Canvas>
            </Border>

            <!-- 控制面板 -->
            <Border Grid.Column="1" Background="#FF3C3C3C" Padding="10" Margin="5">
                <StackPanel>
                    <Label Content="组件控制" Style="{StaticResource ModernLabelStyle}" FontSize="14" FontWeight="Bold"/>
                    
                    <Separator Margin="0,5"/>
                    
                    <Label Content="全局透明度" Style="{StaticResource ModernLabelStyle}"/>
                    <Slider x:Name="GlobalOpacitySlider" 
                            Minimum="0.1" Maximum="1.0" Value="1.0"
                            Style="{StaticResource ModernSliderStyle}"
                            ValueChanged="GlobalOpacitySlider_ValueChanged"
                            Margin="0,0,0,10"/>
                    
                    <Label Content="当前壁纸" Style="{StaticResource ModernLabelStyle}"/>
                    <TextBlock x:Name="CurrentWallpaperTextBlock" 
                               Text="未设置"
                               Foreground="LightGray"
                               FontSize="10"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    
                    <Button Content="预览组件布局" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="PreviewLayoutButton_Click"
                            Margin="0,0,0,5"/>
                    
                    <Button Content="保存布局" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="SaveLayoutButton_Click"
                            Margin="0,0,0,5"/>
                    
                    <Button Content="加载布局" 
                            Style="{StaticResource ModernButtonStyle}"
                            Click="LoadLayoutButton_Click"
                            Margin="0,0,0,5"/>
                    
                    <Separator Margin="0,10"/>
                    
                    <Label Content="组件列表" Style="{StaticResource ModernLabelStyle}"/>
                    <ListBox x:Name="WidgetListBox" 
                             Background="#FF2D2D30"
                             Foreground="White"
                             BorderThickness="1"
                             BorderBrush="#FF464647"
                             Height="200"
                             SelectionChanged="WidgetListBox_SelectionChanged"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#FF3C3C3C" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="StatusLabel" 
                       Content="准备就绪" 
                       Style="{StaticResource ModernLabelStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>