<Window x:Class="DesktopWallpaperApp.Views.WidgetSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="组件设置" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF2D2D30">
    
    <Window.Resources>
        <Style x:Key="SettingsLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
        
        <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF464647"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SettingsSliderStyle" TargetType="Slider">
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1BA1E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   x:Name="TitleTextBlock"
                   Text="组件设置"
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0,0,0,20"/>
        
        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本设置 -->
                <GroupBox Header="基本设置" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Label Content="组件名称" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource SettingsTextBoxStyle}"/>
                        
                        <Label Content="透明度" Style="{StaticResource SettingsLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="OpacitySlider" 
                                    Grid.Column="0"
                                    Minimum="0.1" Maximum="1.0" Value="1.0"
                                    Style="{StaticResource SettingsSliderStyle}"
                                    ValueChanged="OpacitySlider_ValueChanged"/>
                            <TextBlock x:Name="OpacityValueText" 
                                       Grid.Column="1"
                                       Text="100%" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <CheckBox x:Name="ShowDateCheckBox" 
                                  Content="显示日期" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 位置设置 -->
                <GroupBox Header="位置设置" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Label Content="X 坐标" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox x:Name="XPositionTextBox" Style="{StaticResource SettingsTextBoxStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <Label Content="Y 坐标" Style="{StaticResource SettingsLabelStyle}"/>
                                <TextBox x:Name="YPositionTextBox" Style="{StaticResource SettingsTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                        
                        <Button Content="居中显示" 
                                Style="{StaticResource SettingsButtonStyle}"
                                Click="CenterButton_Click"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- 时钟特定设置 -->
                <GroupBox x:Name="ClockSettingsGroup" Header="时钟设置" Foreground="White" Margin="0,0,0,15" Visibility="Collapsed">
                    <StackPanel Margin="10">
                        <Label Content="时间格式" Style="{StaticResource SettingsLabelStyle}"/>
                        <ComboBox x:Name="TimeFormatComboBox" 
                                  Background="#FF3C3C3C" 
                                  Foreground="White" 
                                  BorderBrush="#FF464647"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="24小时制" IsSelected="True"/>
                            <ComboBoxItem Content="12小时制"/>
                        </ComboBox>
                        
                        <Label Content="字体大小" Style="{StaticResource SettingsLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="FontSizeSlider" 
                                    Grid.Column="0"
                                    Minimum="12" Maximum="48" Value="24"
                                    Style="{StaticResource SettingsSliderStyle}"
                                    ValueChanged="FontSizeSlider_ValueChanged"/>
                            <TextBlock x:Name="FontSizeValueText" 
                                       Grid.Column="1"
                                       Text="24" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- 番茄时钟特定设置 -->
                <GroupBox x:Name="PomodoroSettingsGroup" Header="番茄时钟设置" Foreground="White" Margin="0,0,0,15" Visibility="Collapsed">
                    <StackPanel Margin="10">
                        <Label Content="工作时长（分钟）" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBox x:Name="WorkDurationTextBox" Text="25" Style="{StaticResource SettingsTextBoxStyle}"/>
                        
                        <Label Content="短休息时长（分钟）" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBox x:Name="ShortBreakTextBox" Text="5" Style="{StaticResource SettingsTextBoxStyle}"/>
                        
                        <Label Content="长休息时长（分钟）" Style="{StaticResource SettingsLabelStyle}"/>
                        <TextBox x:Name="LongBreakTextBox" Text="15" Style="{StaticResource SettingsTextBoxStyle}"/>
                        
                        <CheckBox x:Name="AutoStartBreakCheckBox" 
                                  Content="自动开始休息" 
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>
                        
                        <CheckBox x:Name="PlaySoundCheckBox" 
                                  Content="播放提示音" 
                                  IsChecked="True"
                                  Style="{StaticResource SettingsCheckBoxStyle}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="确定" 
                    Style="{StaticResource SettingsButtonStyle}"
                    Click="OkButton_Click"/>
            <Button Content="取消" 
                    Style="{StaticResource SettingsButtonStyle}"
                    Click="CancelButton_Click"/>
            <Button Content="应用" 
                    Style="{StaticResource SettingsButtonStyle}"
                    Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>